<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@drawable/background"
    android:id="@+id/first">

    <TextView
        android:id="@+id/mainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainContent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#99141414" />
    <Button
        android:id="@+id/buttonBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beginQuiz"
        android:layout_below="@id/mainPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onClickStartButton"/>

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="312dp"
        android:layout_height="219dp"
        android:layout_above="@id/mainPage"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nerd_glasses" />

</RelativeLayout>